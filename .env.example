# Docker Compose config for ScreenFish
#
# Copy to .env (same directory as docker-compose.yml) and edit:
#   cp .env.example .env
#
# Notes:
# - VITE_* are build-time args for the web image; after editing, rebuild:
#     docker compose build screenfish_web
# - If you set STOCK_SCREENER_API_KEY while auth is disabled, the Web UI needs it too (VITE_API_KEY),
#   but this will embed the key into the built frontend bundle (only suitable for private deployments).

# Host ports
SCREENFISH_WEB_PORT=5174
SCREENFISH_BACKEND_PORT=8000

# Backend (optional)
STOCK_SCREENER_API_KEY=
STOCK_SCREENER_CORS_ORIGINS=

# Backend auth (recommended for non-private deployments)
STOCK_SCREENER_AUTH_ENABLED=0
STOCK_SCREENER_AUTH_SECRET=
STOCK_SCREENER_AUTH_SIGNUP_MODE=open

# Provider token (optional)
TUSHARE_TOKEN=

# Web build args (optional)
VITE_API_URL=/api
VITE_API_KEY=
VITE_APP_VERSION=
VITE_BUILD_SHA=
VITE_BUILD_TIME=

# Optional metadata for /v1/version
STOCK_SCREENER_GIT_SHA=
STOCK_SCREENER_GIT_DESCRIBE=
STOCK_SCREENER_BUILD_TIME=

# Optional paths (useful for production checkouts)
SCREENFISH_WEB_CONTEXT=
SCREENFISH_DATA_DIR=
